<%= form_for @admin_photo, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :sign, :class => 'control-label' %>
    <div class="controls">
      <%= f.radio_button :sign,true, :class => 'radio_button' %><strong>设置在主页</strong>
      &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= f.radio_button :sign,false, :class => 'radio_button' %><strong>不设置在主页</strong>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :avatar, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :avatar,:class => 'file_field'%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_photos_path, :class => 'btn' %>
  </div>
<% end %>
